{
  "screenWidth": 800,
  "screenHeight": 600,

  "buttonTexture": "label",

  "mainMenu": {
    "background": "main-menu-background",
    "barbedWire": {
      "texture": "barbed-wire",
      "width": 800,
      "height": 120,
      "x": 0,
      "y": 400
    },
    "playButton": {
      "x": 200,
      "y": 382,
      "rotation": 0.07,
      "padding": {
        "x": 16,
        "y": 8
      },
      "icon": "play-icon",
      "textMargin": 16,
      "textStyle": {
        "fontSize": 50,
        "fill": ["#955", "#822"],
        "stroke": "#333",
        "strokeThickness": 2
      }
    },
    "labelCaution": {
      "texture": "label-caution",
      "text1": {
        "x": 565,
        "y": 180
      },
      "text2": {
        "x": 530,
        "y": 268
      },
      "textStyle": {
        "fontSize": 46,
        "fill": ["#955", "#822"],
        "stroke": "#333",
        "strokeThickness": 2
      }
    }
  },

  "game": {
    "background": "game-background",
    "loseDelay": 1500,
    "victoryDelay": 1000,

    "minefield": {
      "columns": 30,
      "rows": 20,
      "minesCount": 50,
      "cellSize": 20,
      "cellMargin": 4,
      "numberStyle": {
        "fontSize": 18,
        "fontWeight": 900,
        "colors": [
          "#55d",
          "#0a0",
          "#f00",
          "#008",
          "#800",
          "#080",
          "#880",
          "#444"
        ]
      }
    },

    "pauseButton": {
      "padding": {
        "x": 10,
        "y": 5
      },
      "icon": "pause-icon",
      "textMargin": {
        "x": 10
      },
      "textStyle": {
        "fontSize": 30,
        "fill": ["#955", "#822"],
        "stroke": "#333",
        "strokeThickness": 2
      }
    },
    
    "buttons": {
      "bgWidth": 150,
      "bgHeight": 32,
      "y": 4,
      "padding": {
        "x": 8,
        "y": 4
      },
      "marginX": 12,
      "textStyle": {
        "fontSize": 24,
        "fill": ["#333", "#666", "#333"]
      },
      "textMargin": {
        "x": 8
      }
    }
  },

  "pause": {
    "background": "pause-background",
    "resumeButton": {
      "padding": {
        "x": 16,
        "y": 8
      },
      "icon": "play-icon",
      "textMargin": 16,
      "textStyle": {
        "fontSize": 64,
        "fill": ["#955", "#822"],
        "stroke": "#333",
        "strokeThickness": 2
      }
    },
    "mainMenuButton": {
      "padding": {
        "x": 16,
        "y": 8
      },
      "textStyle": {
        "fontSize": 42,
        "fill": ["#955", "#822"],
        "stroke": "#333",
        "strokeThickness": 2
      },
      "marginY": 20
    }
  },

  "end": {
    "background": "game-background",
    "victory": {
      "textStyle": {
        "fontSize": 64,
        "fill": ["#b91", "#fd7", "#b91"],
        "fontWeight": 600,
        "stroke": "#333",
        "strokeThickness": 3
      },
      "timeTextStyle": {
        "fontSize": 48,
        "fill": ["#b91", "#fd7", "#b91"],
        "fontWeight": 500,
        "stroke": "#333",
        "strokeThickness": 2
      },
      "victoryCupTexture": "victory-cup",
      "playAgainButton": {
        "borderWidth": 3,
        "padding": {
          "x": 16,
          "y": 8
        },
        "icon": "play-icon",
        "iconSize": 30,
        "textStyle": {
          "fontSize": 30,
          "fill": ["#955", "#822"],
          "stroke": "#333",
          "strokeThickness": 2,
          "fontWeight": 600
        },
        "marginTextX": 12,
        "marginY": 20
      },
      "timeTextMarginY": 10,
      "victoryCupMarginY": 16
