    "lose": {
      "textStyle": {
        "fontSize": 72,
        "fill": ["#833", "#333"],
        "fontWeight": 700,
        "stroke": "#aaa",
        "strokeThickness": 5
      },
      "button": {
        "padding": {
          "x": 16,
          "y": 8
        },
        "textStyle": {
          "fontSize": 42,
          "fill": ["#955", "#822"],
          "stroke": "#333",
          "strokeThickness": 2,
          "fontWeight": 600
