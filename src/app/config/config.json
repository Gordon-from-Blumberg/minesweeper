  "end": {
    "background": "game-background",
    "victory": {
      "textStyle": {
        "fontSize": 64,
        "fill": ["#b91", "#fd7", "#b91"],
        "fontWeight": 600,
        "stroke": "#333",
        "strokeThickness": 3
      },
      "timeTextStyle": {
        "fontSize": 48,
        "fill": ["#b91", "#fd7", "#b91"],
        "fontWeight": 500,
        "stroke": "#333",
        "strokeThickness": 2
      },
      "victoryCupTexture": "victory-cup",
      "playAgainButton": {
        "bgColorHexString": "0x80aaff",
        "borderWidth": 3,
        "borderColorHexString": "0xa58830",
        "padding": {
          "x": 16,
          "y": 8
        },
        "icon": "play-icon",
        "iconSize": 30,
        "textStyle": {
